<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text" href="/public/style.css" />
    <title>Blog</title>
  </head>
  <body>
    <body>

      <h1>Blog</h1>

      <ul>
        <% posts.forEach(function(post){ %>
        <li>
          <a href="/post/<%= post.id %>">
            <%= post.titulo %>
          </a>
        </li>
        <% });%>
      </ul>

      <a href="/add">Adicionar nova postagem</a>

    </body>
  </body>
</html>
